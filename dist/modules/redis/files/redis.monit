set daemon 5
set logfile syslog facility log_daemon

check process redis
   with pidfile "/var/run/redis/redis-server.pid"
   mode active
   start program = "/etc/init.d/redis-server start" with timeout 10 seconds
   stop program  = "/etc/init.d/redis-server stop" with timeout 5 seconds
   if failed host 127.0.0.1 port 6379 then restart

set httpd port 2812 address localhost
   allow localhost

